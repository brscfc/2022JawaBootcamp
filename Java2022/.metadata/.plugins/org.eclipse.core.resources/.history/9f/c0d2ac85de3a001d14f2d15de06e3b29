package arkadaşSayilar;

public class Main {

	public static void main(String[] args) { // 220-280

		int sayi1 = 123;
		int sayi2 = 284;
		int toplam1 = 0;
		int toplam2 = 0;

		for (int i = 1; i < sayi1; i++) {
			if (sayi1 % i == 0) {
				toplam1 = toplam1 + i;
			}
		}

		for (int i = 1; i < sayi2; i++) {
			if (sayi2 % i == 0) {
				toplam2 = toplam2 + i;
			}
		}

		if (sayi1 == toplam2) {
			if (sayi2 == toplam1) {
				System.out.println("Bu Sayılar Arkadaştır.");

			} else {
				System.out.println("Bu Sayılar Arkadaş Değildir.");
			}
		}

	}
}
